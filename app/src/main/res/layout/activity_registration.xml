<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <include layout="@layout/header_layout"/>

    <!-- ImageView for self-image -->
    <ImageView
        android:id="@+id/selfImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/placeholder_image" />

    <!-- Button to select image from gallery -->
    <Button
        android:id="@+id/chooseImageBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Choose Image" />

    <!-- Button to initiate the cropping process -->
    <Button
        android:id="@+id/cropImageBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Crop Image" />

    <!-- EditText for name -->
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <!-- EditText for NIK -->
    <EditText
        android:id="@+id/nikEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NIK" />

    <!-- Save button to save the registration data -->
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save Registration"
        android:id="@+id/saveRegistrationBtn" />

</LinearLayout>
